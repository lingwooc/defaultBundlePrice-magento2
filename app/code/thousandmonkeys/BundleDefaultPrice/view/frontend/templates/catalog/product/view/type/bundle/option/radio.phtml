            {
                "[data-gallery-role=choice-gallery-placeholder-<?php /* @escapeNotVerified */ echo $_option->getId() ?>]": {
                    "mage/gallery/gallery": {
                        "mixins":["magnifier/magnify"],
                        "magnifierOpts": {
                            "fullscreenzoom":"5",
                            "top":"0",
                            "left":"0",
                            "width":"100",
                            "height":"100",
                            "eventType":"hover",
                            "enabled":"true"
                        },
                        "data": <?php /* @escapeNotVerified */ echo $block->getGalleryImagesJson($_selection); ?>,
                        "options": {
                            "nav": "dots",
                            "loop": true,
                            "keyboard": true,
                            "arrows": true,
